<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="?android:attr/selectableItemBackground">
    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        app:cardElevation="5dp"
        android:id="@+id/practice_item_cardview"
        app:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/article_item_image"
            android:src="@drawable/luncher_bg5"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:maxHeight="25dp"
        android:id="@+id/article_item_title"
        android:layout_toRightOf="@+id/practice_item_cardview"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:text="成都市东进该表程度前年格局。"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.8人浏览"
        android:id="@+id/practice_item_count"
        android:layout_below="@+id/article_item_title"
        android:layout_toRightOf="@+id/practice_item_cardview"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/share"
        android:id="@+id/practice_item_fximage"
        android:layout_below="@+id/article_item_title"
        android:layout_toRightOf="@+id/practice_item_count"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:id="@+id/practice_item_sharetext"
        android:layout_below="@+id/article_item_title"
        android:layout_toRightOf="@+id/practice_item_fximage"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/fangxiang"
        android:id="@+id/practice_item_fximage2"
        android:layout_below="@+id/article_item_title"
        android:layout_toRightOf="@+id/practice_item_sharetext"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:id="@+id/practice_item_sharetext2"
        android:layout_below="@+id/article_item_title"
        android:layout_toRightOf="@+id/practice_item_fximage2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018/5/7"
        android:id="@+id/article_item_date"
        android:layout_below="@+id/article_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a9a9a9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"/>
</RelativeLayout>